package Y;

import java.util.Random;
import java.util.Scanner;

public class Main { //задание 1
    public static  void  main (String[] args) {
        Main.Задание1();
    }
    public static void Задание1 () {
        System.out.println("угадай число от 0 до 9 ༼ つ ◕_◕ ༽つ");
        Random aboba1 = new  Random ();
        Scanner sus2 = new Scanner(System.in);
        int amogus = aboba1.nextInt(9);
        for(int sus1 = 1; sus1 <= 3; sus1++ ) {
            int sus3 = sus2.nextInt();
            if (sus3 == amogus) {
                System.out.println("ты ПОБЕДИТЕЛЬ по жизни");
                break;
            }
            else {
                System.out.println("ты не угадал, попыток потрачено из трёх: " + sus1 );
                if (sus1 == 3) {
                    System.out.println("Загаданным числом было:" + amogus);
                }
            }
        }
    }

}
